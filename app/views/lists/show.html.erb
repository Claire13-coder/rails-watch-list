
<div class="banner banner-cinema">
  <div>
    <h1><%= @list.name %></h1>
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-red" %>
  </div>
  <p>
    <%= link_to list_path(@list.id), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
      <i class="fa-solid fa-trash"></i>
    <% end %>
  </p>
</div>

<div class="maincontainer">
  <div class="movie-cards"><% @bookmarks.each do |bookmark| %>
      <div class="movie-card">
        <%= image_tag bookmark.movie.poster_url %>
        <h2><%= bookmark.movie.title %></h2>
        <p><%= bookmark.movie.overview %></p>
        <p><%= bookmark.comment %></p>
        <%= link_to bookmark_path(bookmark.id), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
            <i class="fa-solid fa-trash"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
